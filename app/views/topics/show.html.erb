<h1><%= @topic.title %></h1>

<div id="topics">
  <% if @topic.resources.blank? %>
    add a resource
  <% else %>
    <% @topic.resources.each do |resource| %>
      <p><%= resource.title %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([ @topic, @resource ], remote: true) do |f| %>
  <%= f.input :title %>
  <%= f.button :submit %>
<% end %>

