<%= form_with model: todo, id: dom_id(todo, 'inline_form') do |form| %>
 <div class="todo-title" id="title-todo">
    <%= form.text_field :title %>
  </div>

  <div class="todo-description" id="description-todo">
    <%= form.text_field :description %>
  </div>

  <div style="display: none">
    <%= form.submit %>
  </div>
<% end %>
